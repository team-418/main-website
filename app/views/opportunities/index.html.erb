<p id="notice"><%= notice %></p>

<h1>Listing Opportunities</h1>

<table>
  <thead>
    <tr>
      <th>Opportunity name</th>
      <th>Opportunity desc</th>
      <th>Institution</th>
      <th>Review</th>
      <th>Time period</th>
      <th>User</th>
      <th>Skill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.opportunity_name %></td>
        <td><%= opportunity.opportunity_desc %></td>
        <td><%= opportunity.institution %></td>
        <td><%= opportunity.review %></td>
        <td><%= opportunity.time_period %></td>
        <td><%= opportunity.user %></td>
        <td><%= opportunity.skill %></td>
        <td><%= link_to 'Show', opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

